<h1>ðŸŽ® AA Math</h1>

<select id="difficulty">
    <option value="easy">Easy ( + )</option>
    <option value="medium">Medium ( + , - )</option>
    <option value="hard">Hard ( + , - , Ã— , Ã· )</option>
</select>

<br><br>

<button onclick="toggleDarkMode()">Dark / Light Mode</button>

<p id="question">Click Start!</p>

<input type="number" id="answer" placeholder="Your answer">

<br>

<button onclick="checkAnswer()">Submit</button>
<button onclick="newQuestion()">Start</button>

<p id="timer">Time: 10</p>
<p id="score">Score: 0</p>

<div id="winScreen">ðŸŽ‰ YOU WIN! ðŸ”¥<br><button onclick="resetGame()">Play Again</button></div>

<audio id="correctSound" src="https://cdn.pixabay.com/audio/2021/09/07/audio_1d0b9efc41.mp3"></audio>
<audio id="wrongSound" src="https://cdn.pixabay.com/audio/2022/03/15/audio_52dbf50a42.mp3"></audio>

<script>
    let num1, num2, correct, timer;
    let score = 0;
    let timeLeft = 10;

    function toggleDarkMode() {
        document.body.classList.toggle("dark");
    }

    function randomOperation(difficulty) {
        if (difficulty === "easy") return "+";
        if (difficulty === "medium") return ["+", "-"][Math.floor(Math.random() * 2)];
        if (difficulty === "hard") return ["+", "-", "Ã—", "Ã·"][Math.floor(Math.random() * 4)];
    }

    function newQuestion() {
        clearInterval(timer);
        startTimer();

        let difficulty = document.getElementById("difficulty").value;
        let op = randomOperation(difficulty);

        num1 = Math.floor(Math.random() * 20) + 1;
        num2 = Math.floor(Math.random() * 20) + 1;

        if (op === "+") correct = num1 + num2;
        if (op === "-") correct = num1 - num2;
        if (op === "Ã—") correct = num1 * num2;
        if (op === "Ã·") {
            num1 = num2 * (Math.floor(Math.random() * 10) + 1);
            correct = num1 / num2;
        }

        document.getElementById("question").innerHTML = `What is ${num1} ${op} ${num2}?`;
        document.getElementById("answer").value = "";
    }

    function startTimer() {
        timeLeft = 10;
        document.getElementById("timer").innerHTML = "Time: " + timeLeft;

        timer = setInterval(() => {
            timeLeft--;
            document.getElementById("timer").innerHTML = "Time: " + timeLeft;

            if (timeLeft <= 0) {
                clearInterval(timer);
                score--;
                document.getElementById("score").innerHTML = "Score: " + score;
                document.getElementById("wrongSound").play();
                newQuestion();
            }
        }, 1000);
    }

    function checkAnswer() {
        let userAns = Number(document.getElementById("answer").value);

        if (userAns === correct) {
            score++;
            document.getElementById("correctSound").play();
            animateQuestion("correct");
        } else {
            score--;
            document.getElementById("wrongSound").play();
            animateQuestion("wrong");
        }

        document.getElementById("score").innerHTML = "Score: " + score;

        if (score >= 10) {
            document.getElementById("winScreen").style.display = "block";
        } else {
            newQuestion();
        }
    }

    function animateQuestion(type) {
        let q = document.getElementById("question");
        if (type === "correct") {
            q.style.transform = "scale(1.1)";
            setTimeout(() => q.style.transform = "scale(1)", 200);
        } else {
            q.style.transform = "rotate(5deg)";
            setTimeout(() => q.style.transform = "rotate(0)", 200);
        }
    }

    function resetGame() {
        score = 0;
        document.getElementById("winScreen").style.display = "none";
        document.getElementById("score").innerHTML = "Score: 0";
        newQuestion();
    }
</script>

